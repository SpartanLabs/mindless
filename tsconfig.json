{

    "compilerOptions": {
        "types": ["node"],
        "declaration": true,
        "outDir": "./dist",
        "strict": true,
        "sourceMap": true,
        "preserveConstEnums": true,
        "removeComments": true,
        "noImplicitAny": false,
        "experimentalDecorators": true,
        "lib": ["es2015"],
        "target": "es5",
        "strictPropertyInitialization": false
    },
    "exclude": [
        "node_modules",
        "tests"
    ],
    "typeRoots": [
        "../node_modules/@types"
    ]
}
